set -e
tempscript=\$(mktemp "$VIASH_META_TEMP_DIR/viash-run-suzuki_mlp-XXXXXX").py
function clean_up {
  rm "\$tempscript"
}
function interrupt {
  echo -e "\nCTRL-C Pressed..."
  exit 1
}
trap clean_up EXIT
