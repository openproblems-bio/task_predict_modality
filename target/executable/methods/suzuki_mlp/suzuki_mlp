  echo "    --dropout_p"
  echo "        type: double"
  echo "        default: 0.1"
  echo "        Dropout probability."
  echo ""
  echo "    --activation"
  echo "        type: string"
  echo "        default: relu"
  echo "        Activation function (relu or gelu)."
  echo ""
  echo "    --norm"
  echo "        type: string"
  echo "        default: layer_norm"
  echo "        Normalization type (layer_norm or batch_norm)."
  echo ""
  echo "    --use_skip_connections"
  echo "        type: boolean"
  echo "        default: true"
  echo "        Whether to use skip connections in blocks."
  echo ""
  echo "    --learning_rate"
  echo "        type: double"
  echo "        default: 1.0E-4"
  echo "        Learning rate for training."
  echo ""
  echo "    --weight_decay"
  echo "        type: double"
  echo "        default: 1.0E-6"
  echo "        Weight decay for regularization."
